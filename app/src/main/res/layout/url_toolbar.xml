<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout" >
    <LinearLayout
        android:id="@+id/home_refresh_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <!--<ImageView
            android:id="@+id/home_button"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:src="@drawable/home" />-->
        <IconTextView
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:text="{fa-home}"
            android:shadowColor="@color/shadow_color"
            android:shadowDx="3"
            android:id="@+id/home_button"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:textSize="35sp"
            android:textColor="@color/text_color"
            />



        <IconTextView
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:text="{fa-refresh}"
            android:shadowColor="@color/shadow_color"
            android:shadowDx="3"
            android:id="@+id/reload_button"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:textSize="35sp"
            android:textColor="@color/text_color"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/next_back_layout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="top|center"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <!-- <ImageView android:id="@+id/next_button"
             android:layout_width="35.0dip"
             android:layout_height="35.0dip"
             android:src="@drawable/next" /> -->

        <!--  <IconTextView
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:text="{fa-arrow-circle-left}"
            android:shadowColor="@color/shadow_color"
            android:shadowDx="3"
            android:id="@+id/next_button"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:textSize="35sp"
            android:textColor="@color/text_color"
            />
      <IconTextView
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:text="{fa-arrow-circle-right}"
            android:shadowColor="#22000000"
            android:shadowDx="3"
            android:id="@+id/prev_button"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:textSize="35sp"
            android:textColor="@color/text_color"
            /> -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_count"
            android:textSize="17sp"
            android:text="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/filename_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/text_color"
        android:layout_toLeftOf="@+id/next_back_layout"
        android:layout_toRightOf="@+id/home_refresh_layout"
        android:ems="10"
        android:imeOptions="actionGo"
        android:selectAllOnFocus="true"
        android:singleLine="true" />
        android:singleLine="true" />
</RelativeLayout>